@layer base {
  body {
    @apply bg-background text-foreground;
  }

  .custom-cursor {
    @apply pointer-events-none fixed top-0 left-0 z-50 mix-blend-difference;
  }

  .cursor-dot {
    @apply h-2 w-2 bg-white rounded-full;
  }

  .cursor-ring {
    @apply h-8 w-8 border-2 border-white rounded-full;
  }
}

@layer components {
  .dark section {
    background: linear-gradient(
      to bottom,
      rgb(0, 0, 0),
      rgb(5, 5, 5)
    );
  }

  .dark section:nth-child(2n) {
    background: rgb(0, 0, 0);
  }

  .glassmorphism {
    @apply bg-white/10 backdrop-blur-md border border-white/20;
  }
  
  .dark .glassmorphism {
    background: linear-gradient(
      to bottom,
      rgba(0, 0, 0, 0.7),
      rgba(0, 0, 0, 0.8)
    );
    box-shadow: 
      0 0 0 1px rgba(255, 255, 255, 0.05),
      0 4px 8px 0 rgba(0, 0, 0, 0.4);
    -webkit-backdrop-filter: blur(8px);
    backdrop-filter: blur(8px);
    border: 1px solid rgba(255, 255, 255, 0.1);
  }

  .dark .card,
  .dark .bg-card {
    background: linear-gradient(
      to bottom,
      rgb(5, 5, 5),
      rgb(10, 10, 10)
    );
    box-shadow: 
      0 0 0 1px rgba(255, 255, 255, 0.05),
      0 2px 4px 0 rgba(0, 0, 0, 0.2);
  }

  .gradient-text {
    @apply bg-gradient-to-r from-primary-500 via-accent-500 to-primary-600 bg-clip-text text-transparent;
  }

  .cloud-gradient {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  }

  .devops-gradient {
    background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
  }

  .aws-gradient {
    background: linear-gradient(135deg, #ff9900 0%, #232f3e 100%);
  }

  .azure-gradient {
    background: linear-gradient(135deg, #0078d4 0%, #68217a 100%);
  }

  .gcp-gradient {
    background: linear-gradient(135deg, #4285f4 0%, #34a853 100%);
  }

  .skill-card {
    @apply relative overflow-hidden rounded-xl border border-border bg-card p-6 transition-all duration-300 hover:shadow-lg hover:scale-105;
  }

  .skill-card::before {
    content: '';
    @apply absolute inset-0 bg-gradient-to-r from-primary-500/10 to-accent-500/10 opacity-0 transition-opacity duration-300;
  }

  .skill-card:hover::before {
    @apply opacity-100;
  }

  .project-card {
    @apply relative overflow-hidden rounded-xl border border-border transition-all duration-300 hover:shadow-xl hover:scale-105;
    background: linear-gradient(to bottom, var(--card), color-mix(in srgb, var(--card) 96%, white));
  }

  .dark .project-card {
    background: linear-gradient(
      to bottom,
      rgb(5, 5, 5),
      rgb(10, 10, 10)
    );
    box-shadow: 
      0 0 0 1px rgba(255, 255, 255, 0.05),
      0 2px 4px 0 rgba(0, 0, 0, 0.2),
      0 1px 0 0 rgba(255, 255, 255, 0.05) inset;
  }

  .project-card::before {
    content: '';
    @apply absolute inset-0 opacity-0 transition-opacity duration-300;
    background: linear-gradient(
      120deg,
      transparent 0%,
      transparent 40%,
      rgba(255, 255, 255, 0.1) 50%,
      transparent 60%,
      transparent 100%
    );
  }

  .dark .project-card::before {
    background: linear-gradient(
      120deg,
      transparent 0%,
      transparent 40%,
      rgba(255, 255, 255, 0.03) 50%,
      transparent 60%,
      transparent 100%
    );
  }

  .project-card:hover::before {
    @apply opacity-100;
  }

  .dark .project-card:hover {
    background: linear-gradient(
      to bottom,
      rgb(8, 8, 8),
      rgb(15, 15, 15)
    );
    box-shadow: 
      0 0 0 1px rgba(255, 255, 255, 0.1),
      0 4px 8px 0 rgba(0, 0, 0, 0.4),
      0 1px 0 0 rgba(255, 255, 255, 0.1) inset;
  }

  .floating {
    animation: float 6s ease-in-out infinite;
  }

  .glow-effect {
    position: relative;
  }

  .glow-effect::after {
    content: '';
    position: absolute;
    inset: 0;
    border-radius: 8px;
    background: linear-gradient(to right, hsla(var(--primary-500) / 0.2), hsla(var(--accent-500) / 0.2));
    filter: blur(1rem);
    opacity: 0;
    transition: opacity 0.3s;
  }

  .glow-effect:hover::after {
    opacity: 1;
  }

  .typewriter {
    overflow: hidden;
    border-right: 2px solid;
    white-space: nowrap;
    animation: typewriter 3s steps(40) 1s 1 normal both, blink 1s infinite;
  }

  .scroll-indicator {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 4px;
    background: linear-gradient(to right, hsl(var(--primary-500)), hsl(var(--accent-500)));
    transform-origin: left;
    z-index: 50;
  }

  .parallax-bg {
    position: fixed;
    inset: 0;
    background-image: var(--cloud-pattern);
    opacity: 0.05;
    transform: translateZ(-1px) scale(2);
  }

  .code-block {
    position: relative;
    border-radius: 8px;
    background: hsl(var(--secondary-900));
    padding: 1rem;
    font-family: monospace;
    font-size: 0.875rem;
  }

  .code-block::before,
  .code-block::after {
    content: '';
    position: absolute;
    top: 0.75rem;
    width: 0.75rem;
    height: 0.75rem;
    border-radius: 9999px;
  }

  .code-block::before {
    left: 0.75rem;
    background: #ef4444;
  }

  .code-block::after {
    left: 2rem;
    background: #eab308;
  }
}

@layer utilities {
  .text-balance {
    text-wrap: balance;
  }

  .scrollbar-hide {
    -ms-overflow-style: none;
    scrollbar-width: none;
  }

  .scrollbar-hide::-webkit-scrollbar {
    display: none;
  }

  .perspective-1000 {
    perspective: 1000px;
  }

  .backface-hidden {
    backface-visibility: hidden;
  }

  .transform-3d {
    transform-style: preserve-3d;
  }
}

/* Custom scrollbar */
::-webkit-scrollbar {
  width: 8px;
}

::-webkit-scrollbar-track {
  background: hsl(var(--secondary-100));
}

.dark ::-webkit-scrollbar-track {
  background: hsl(var(--secondary-900));
}

::-webkit-scrollbar-thumb {
  background: hsl(var(--primary-500));
  border-radius: 9999px;
}

::-webkit-scrollbar-thumb:hover {
  background: hsl(var(--primary-600));
}

/* Selection styles */
::selection {
  background: hsla(var(--primary-500) / 0.2);
  color: hsl(var(--primary-900));
}

.dark ::selection {
  color: hsl(var(--primary-100));
}

/* Focus styles */
.focus-visible {
  outline: none;
  box-shadow: 0 0 0 2px hsl(var(--primary-500)),
              0 0 0 4px hsl(var(--background));
}

/* Loading animation */
.loading-dots {
  display: inline-flex;
  gap: 0.25rem;
}

.loading-dots > div {
  width: 0.5rem;
  height: 0.5rem;
  background: currentColor;
  border-radius: 9999px;
  animation: pulse 1.4s cubic-bezier(0.4, 0, 0.6, 1) infinite;
}

.loading-dots > div:nth-child(2) {
  animation-delay: 0.2s;
}

.loading-dots > div:nth-child(3) {
  animation-delay: 0.4s;
} 